<div class="background-blue">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-offset-4 col-md-4">
        <h1 class="header-margin text-center">Welcome back!</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-public", id: "btn-login" %>
        </div>
        <% end %>
        <div class="text-center text-margin">
          <%= render "devise/shared/links" %>
        </div>
        <div class="text-center text-margin" id="demo-profile"">
          <p>Is your school not signed up yet? Try our demo profile!</p>
          <p>Email: snape@gmail.com <br> Password: 123456</p>
        </div>
      </div>
    </div>
  </div>
</div>
